---
const { title } = Astro.props.frontmatter;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      body {
        font-family: system-ui, sans-serif;
        max-width: 800px;
        margin: auto;
        padding: 2rem;
        line-height: 1.6;
      }
      h1, h2, h3 {
        color: #2c3e50;
      }
      a {
        color: #007acc;
      }
      hr {
        margin: 2rem 0;
      }
    </style>
	<link rel="stylesheet" href="/print.css" media="print" />
  </head>
  <body>
    <slot />
  </body>
</html>
